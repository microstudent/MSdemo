<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.microstudent.app.msdemo.DeletableEditText.ui.EditTextActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:id="@+id/layout_username"
        >
        <com.microstudent.app.msdemo.DeletableEditText.DeletableEditText
            android:id="@+id/editview_username"
            style="@style/EditText_login"
            app:clear_icon="@drawable/ic_clear_grey600_48dp"
            app:underline_color="@android:color/darker_gray"
            android:inputType="textEmailAddress"
            android:hint="邮箱/手机号"
            android:imeOptions="actionNext"/>
    </android.support.design.widget.TextInputLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/layout_username"
        android:layout_marginTop="60dp"
        >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.microstudent.app.msdemo.DeletableEditText.DeletableEditText
                style="@style/EditText_login"
                android:id="@+id/editview_password"
                app:clear_icon="@drawable/ic_clear_grey600_48dp"
                app:underline_color="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:paddingRight="35dp"
                android:inputType="textPassword"
                android:hint="密码"
                android:imeOptions="actionGo"

                />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/password_eye"
            android:background="@null"
            android:text="HIDE"
            android:textSize="@dimen/font_small"
            android:textColor="@android:color/darker_gray"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/layout_password"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:contentDescription="显示/隐藏密码"/>
    </RelativeLayout>
</RelativeLayout>
